---
interface Props {
  href: string;
  title: string;
  description: string;
}

const { href, title, description } = Astro.props;
---

<a href={href} class="category-card">
  <div class="card-content">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</a>

<style>
  .category-card {
    padding: 1.5rem;
    border-radius: 15px;
    background: linear-gradient(
      135deg,
      rgba(var(--accent-dark), 0.8),
      rgba(var(--accent-dark), 0.4)
    );
    border: 1px solid rgba(var(--accent-light), 0.2);
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(var(--accent-light), 0.1),
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
    border-color: rgba(var(--accent-light), 0.4);
    box-shadow: 0 5px 15px rgba(var(--accent-light), 0.2);
  }

  .category-card:hover::before {
    transform: translateX(100%);
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
    color: rgb(var(--accent-light));
    margin-bottom: 0.5rem;
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  }

  p {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.9;
    line-height: 1.4;
  }
</style>